{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@atoms/*": [
        "components/Atoms/*"
      ],
      "@molecules/*": [
        "components/Molecules/*"
      ],
      "@organisms/*": [
        "components/Organisms/*"
      ],
      "@templates/*": [
        "components/Templates/*"
      ],
      "@globalStyles/*": [
        "styles/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@pageStyles/*": [
        "styles/pages/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@util/*": [
        "util/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
